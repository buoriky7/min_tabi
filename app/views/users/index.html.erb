<div class="user-index-title">
	<h2>現在のユーザー一覧</h2>
</div>

<div class="user-index-btn_wrapper">
	<div class="btn btn-info"><%= link_to "昇順", users_path %></div>
	<div class="btn btn-info"><%= link_to "降順", "users/index_desc" %></div>
</div>

<div class="user-index-content">
	<table class="table">
		<% @users.each do |user| %>
		<tr>
			<th class="text-center">登録日</th>
			<th colspan="2"><%= user.created_at.strftime('%Y.%m.%d') %></th>
		</tr>
		<tr>
			<td rowspan="3" width="110"><!-- TODO:user, :profile_image, に変更 -->
				<%= attachment_image_tag user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg", class: "user-index-profile-image" %>
			</td>
			<td><h3><%= user.last_name %><%= user.first_name %> / <%= user.nickname %></h3></td>
			<td><%= user.email %></td>
		</tr>
		<tr>
			<td colspan="2">
			</td>
		</tr>
		<tr>
			<td colspan="2">
				<div class="btn btn-warning btn-sm"><%= link_to "編集", edit_user_path(user.id) %></div>
				<div class="btn btn-danger btn-sm"><%= link_to "削除", users_index_desc_path, method: :delete %></div>
			</td>
		</tr>
		<% end %>
	</table>
</div>